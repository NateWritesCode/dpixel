{
   "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
   "files": {
      "ignore": ["node_modules"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3
   },
   "linter": {
      "enabled": true,
      "rules": {
         "suspicious": {
            "noExplicitAny": "off"
         },
         "recommended": true
      },
      "ignore": ["node_modules"]
   }
}
